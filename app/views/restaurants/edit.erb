<h3>Edit A Restaurant</h3>

<form method="POST" action="/restaurants/<%=@restaurant.id%>">

<p><label for="rest_name">Restaurant Name:</label><input type="text" name="restaurant[name]" value="<%=@restaurant.name%>"></p>

<p><label for="address">Restaurant Address:</label><input type="text" name="restaurant[address]" value="<%=@restaurant.address%>"></p>


<p><label for="cat">Restaurant Categories:</label></p>
<ul class="checkbox-grid">  <%@catego.each do |category|%>
   
<li><input id="<%=category.name%>" type="checkbox" name="cat[]" value="<%= category.id %>" <%='checked' if @restaurant.categories.include?(category)%>><%=category.name %></li>
  <%end%></ul>


<input type="hidden" id="hidden" name="_method" value="patch">

<p><input type="submit" value="Edit Restaurant" style="float:left;clear:left;"></p>

</form>

 <form action="/restaurants/<%=@restaurant.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <p> <input type="submit" value="Delete Entire Restaurant" style="float:left;clear:left;"></p>
  </form>
